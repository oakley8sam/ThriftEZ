<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oakley8sam.thriftez">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recordActivity"
            android:label="Record an Expense"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.oakley8sam.thriftez.MainActivity" />
        </activity>
        <activity
            android:name=".editActivity"
            android:label="View/Edit Budget"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.oakley8sam.thriftez.MainActivity" />
        </activity>
        <activity
            android:name=".chooseEditActivity"
            android:label="Choose an Edit"
            android:parentActivityName=".editActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.oakley8sam.thriftez.chooseEditActivity" />
        </activity>

    </application>

</manifest>